{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./sample",
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
