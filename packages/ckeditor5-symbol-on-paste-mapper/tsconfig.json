{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2015.promise"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "../..",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": [],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@ckeditor/*": [
        "types/ckeditor__*"
      ]
    }
  }
}
