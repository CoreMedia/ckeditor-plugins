{
  "extends": "../../tsconfig.json",
  "include": [
    "./__tests__",
    "./src",
    "./types"
  ],
  "compilerOptions": {
    "outDir": "./dist/src",
    "paths": {
      "@bbob/core/*": [
        "./types/@bbob/core/*"
      ],
      "@bbob/html/*": [
        "./types/@bbob/html/*"
      ],
      "@bbob/plugin-helper/*": [
        "./types/@bbob/plugin-helper/*"
      ],
      "@bbob/preset/*": [
        "./types/@bbob/preset/*"
      ],
      "@bbob/preset-html5/*": [
        "./types/@bbob/preset-html5/*"
      ]
    }
  }
}
