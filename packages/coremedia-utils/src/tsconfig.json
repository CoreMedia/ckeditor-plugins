{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "outDir": "../dist",
    "lib": [
      "ES6",
      "DOM",
      "ES2015.Promise"
    ],
    "typeRoots": [
      "../../types/*",
      "node_modules/@types"
    ],
    // TODO[cke] Why do we need to add this in a module, not related to CKEditor?
    "paths": {
      "@ckeditor/ckeditor5-core/*": [
        "../../types/ckeditor__ckeditor5-core/*"
      ],
      "@ckeditor/ckeditor5-paste-from-office/*": [
        "../../types/ckeditor__ckeditor5-paste-from-office/*"
      ],
      "@ckeditor/ckeditor5-clipboard/*": [
        "../../types/ckeditor__ckeditor5-clipboard/*"
      ],
      "@ckeditor/ckeditor5-engine/*": [
        "../../types/ckeditor__ckeditor5-engine/*"
      ],
      "@ckeditor/ckeditor5-utils/*": [
        "../../types/ckeditor__ckeditor5-utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "../../../node_modules/@types/jest/index.d.ts",
    "../../node_modules/@types/jest-each/index.d.ts"
  ],
  "exclude": [
    "../dist",
    "node_modules"
  ]
}
