{
  "compilerOptions": {
    "alwaysStrict": true,
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES5",
      "es6",
      "ESNext"
    ],
    "module": "es2022",
    "moduleResolution": "Bundler",
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "pretty": false,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020",
  },
  "include": [
    "./typings/"
  ]
}
