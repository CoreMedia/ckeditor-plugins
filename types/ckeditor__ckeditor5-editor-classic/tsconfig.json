{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2015.promise"
    ],
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "rootDir": "./src",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@ckeditor/ckeditor5-utils/*": [
        "../ckeditor__ckeditor5-utils/*"
      ],
      "@ckeditor/ckeditor5-engine/*": [
        "../ckeditor__ckeditor5-engine/*"
      ]
    }
  }
}
